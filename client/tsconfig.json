{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016.array.include",
      "es2017.object"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
        "static/*"
      ]
    }
  }
}